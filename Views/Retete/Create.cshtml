@model CookingHeaven.Models.Retete

@{
    ViewData["Title"] = "Create";
}

<h1>Adauga o reteta</h1>

<h4>Retete</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RetetaNume" class="control-label">Numele retetei</label>
                <input asp-for="RetetaNume" class="form-control" textBox1.Multiline = true;/>
                <span asp-validation-for="RetetaNume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RetetaDescriere" class="control-label">Descrierea retetei</label>
                <textarea asp-for="RetetaDescriere" class="form-control" rows="3" display:flex required ></textarea>
                <span asp-validation-for="RetetaDescriere" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Creeaza" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Inapoi la lista</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
